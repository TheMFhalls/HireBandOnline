{% extends 'home.html.twig' %}

{% block bodyClass %}home interna{% endblock %}

{% block body %}
<section class="internas" style="background-image: url({{ asset("img/internas/internas.jpg") }});">
</section>
<section class="login">
    <div class="container mt-30 mb-30">
        <div class="row">
            <div class="form-login col-12 offset-md-3 col-md-6">
                <form action="{{ path('verificar') }}" method="post">
                    <label for="login">Informe seu Login</label>
                    <input type="text" id="login" name="login" />
                    <label for="password">Informe sua Senha</label>
                    <input type="password" id="password" name="password" />
                    <br>
                    <input type="submit" value="Logar" class="btn btn-hire" />
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}