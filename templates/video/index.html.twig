{% extends 'administracao.html.twig' %}

{% block body %}
    <h1>Listagem de Vídeos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Url</th>
                <th>Descricao</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.titulo }}</td>
                <td>
                    <iframe src="{{ video.url }}" width="100%" height="350px" frameborder="0"></iframe>
                </td>
                <td>{{ video.descricao }}</td>
                <td>
                    {{ include('video/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('video_new') }}">Adicionar Vídeo</a>
{% endblock %}