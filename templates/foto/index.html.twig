{% extends 'administracao.html.twig' %}

{% block title %} - Foto{% endblock %}

{% block body %}
    <h1>Foto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>Diretorio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for foto in fotos %}
            <tr>
                <td>{{ foto.id }}</td>
                <td>{{ foto.descricao }}</td>
                <td>{{ foto.diretorio }}</td>
                <td>
                    <a href="{{ path('foto_show', {'id': foto.id}) }}">show</a>
                    <a href="{{ path('foto_edit', {'id': foto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('foto_new') }}">Create new</a>
{% endblock %}