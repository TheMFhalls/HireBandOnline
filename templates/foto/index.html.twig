{% extends 'administracao.html.twig' %}

{% block body %}
    <h1>Listagem de Fotos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>Diretorio</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for foto in fotos %}
            <tr>
                <td>{{ foto.id }}</td>
                <td>{{ foto.descricao }}</td>
                <td><img src="{{ foto.diretorio }}" alt="HireBandOnline" class="img-responsive" /></td>
                <td>
                    {{ include('foto/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('foto_new') }}">Adicionar Imagem</a>
{% endblock %}